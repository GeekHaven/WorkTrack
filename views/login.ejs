<%- include('./partials/header', {page: 'login'}) %>

<div class="loginPage row">
    <div class="col-md-6 col-12">
        <h1 class="display-4">Login to view and add new work</h1>
        <h3>Do Something Amazing!</h3>
    </div>
    <div class="container auth-div col-lg-3 col-md-4 col-12" id="login-div">
        <form action="/login" method="POST">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" aria-describedby="emailHelp" name="password">
            </div>
            <button class="btn btn-primary">Login</button>
        </form>
        <p class = "d-flex justify-content-center links">Don't have an account <a href="./register.ejs">Register Now</a></p>
    </div>
</div>

<%- include('./partials/footer') %>
